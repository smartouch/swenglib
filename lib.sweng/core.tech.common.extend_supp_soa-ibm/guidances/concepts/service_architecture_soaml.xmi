<org.eclipse.epf.uma:ContentDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmlns:rmc="http://www.ibm.com/rmc" rmc:version="7.5.1" xmi:id="-bJC8ad3Hm11oGCY1S1gKbw" name="service_architecture_soaml,_wYQYkEo3Ed6D_7XK49c0nw" guid="-bJC8ad3Hm11oGCY1S1gKbw" changeDate="2009-09-21T21:02:07.171-0700" version="7.5.0">
