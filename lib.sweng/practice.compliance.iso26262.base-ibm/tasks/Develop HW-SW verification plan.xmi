                &lt;p dir=&quot;ltr&quot; align=&quot;center&quot;>&#xD;
                    &lt;b>B&lt;/b>&#xD;
                &lt;/p>&#xD;
            &lt;/td>&#xD;
            &lt;td bgcolor=&quot;#CCCCCC&quot; height=&quot;9&quot; valign=&quot;top&quot; width=&quot;7%&quot;>&#xD;
                &lt;p dir=&quot;ltr&quot; align=&quot;center&quot;>&#xD;
                    &lt;b>C&lt;/b>&#xD;
                &lt;/p>&#xD;
            &lt;/td>&#xD;
            &lt;td bgcolor=&quot;#CCCCCC&quot; height=&quot;9&quot; valign=&quot;top&quot; width=&quot;8%&quot;>&#xD;
